{
    "name": "Pentest Workflow",
    "steps": [
        {
            "name": "web Scan",
            "command": "nmap -p 80,443 -oG - $HOST",
            "match": "80/open/tcp",
            "ifSuccess": [
                {
                    "name": "subdomain",
                    "command": "echo scanning $HOST for subdomains"
                },
                {
                    "name": "feroxbuster",
                    "command": "feroxbuster -u http://$host"
                }
            ]
        }
    ]
}
